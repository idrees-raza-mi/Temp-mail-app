# Server Configuration
PORT=3000
SMTP_PORT=25
FRONTEND_URL=http://localhost:8080

# Domain Configuration - Add your domains here (comma separated)
ALLOWED_DOMAINS=tempmail.example.com,disposable.example.com,temp.example.com

# Database Configuration
DATABASE_PATH=./emails.db

# Email Configuration
EMAIL_EXPIRATION_HOURS=24
MAX_EMAILS_PER_ADDRESS=50
CLEANUP_INTERVAL_MINUTES=60

# Security
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=15

# Optional: SMTP Authentication (for production)
SMTP_AUTH_ENABLED=false
SMTP_AUTH_USER=
SMTP_AUTH_PASS=
